# TimeTrack Pro - Backend Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DJANGO SETTINGS
# =============================================================================

# Required in production - generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# development | production
DJANGO_SETTINGS_MODULE=config.settings.development

# Set to False in production
DEBUG=True

# Comma-separated list of allowed hosts (required in production)
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE
# =============================================================================

DB_HOST=localhost
DB_PORT=5432
DB_NAME=timetrack_dev
DB_USER=postgres
DB_PASSWORD=postgres

# =============================================================================
# REDIS (Cache & Celery Broker)
# =============================================================================

REDIS_URL=redis://localhost:6379/0

# =============================================================================
# CORS (Frontend URL)
# =============================================================================

# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Frontend URL for password reset emails
FRONTEND_URL=http://localhost:3000

# =============================================================================
# EMAIL (Production only)
# =============================================================================

# SendGrid API key for transactional emails
# SENDGRID_API_KEY=your-sendgrid-api-key

# Default from email
# DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# AWS S3 (Production only - for file storage)
# =============================================================================

# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# =============================================================================
# SENTRY (Production only - for error tracking)
# =============================================================================

# SENTRY_DSN=your-sentry-dsn
